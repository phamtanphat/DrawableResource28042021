    <RelativeLayout
        android:id="@+id/relativeTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/relativeContainerWaveup"
            android:background="#4880FE"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <RelativeLayout
                android:layout_centerVertical="true"
                android:gravity="center"
                android:background="@drawable/bg_ring_white"
                android:layout_marginEnd="20dp"
                android:layout_alignParentEnd="true"
                android:layout_width="50dp"
                android:layout_height="50dp">
                <ImageView
                    android:src="@drawable/ic_next_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>
            <ImageView
                android:scaleType="fitXY"
                android:src="@drawable/ic_wave_up"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="120dp"/>
        </RelativeLayout>

        <ImageView
            android:layout_below="@id/relativeContainerWaveup"
            android:scaleType="fitXY"
            android:src="@drawable/ic_wave_down"
            android:layout_width="match_parent"
            android:layout_height="120dp"/>

        <LinearLayout
            android:layout_marginLeft="30dp"
            android:layout_marginTop="60dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:fontFamily="sans-serif"
                android:textSize="18sp"
                android:textColor="#ffff"
                android:text="Welcome Back,"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:textSize="30sp"
                android:textColor="#ffff"
                android:text="Sign in!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </RelativeLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_below="@id/relativeTop"
        android:layout_above="@id/relativeBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_edittext_border"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:scaleType="fitXY"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:background="#BDBDBD"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
            <EditText
                android:hint="User name"
                android:padding="10dp"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_edittext_border"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:scaleType="fitXY"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_lock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:background="#BDBDBD"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
            <EditText
                android:hint="Pass word"
                android:padding="10dp"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_centerVertical="true"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#5E35B1"
                android:text="Sign in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_centerVertical="true"
                android:gravity="center"
                android:background="@drawable/bg_circle_blue"
                android:layout_marginEnd="20dp"
                android:layout_alignParentEnd="true"
                android:layout_width="50dp"
                android:layout_height="50dp">
                <ImageView
                    android:src="@drawable/ic_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>
        </RelativeLayout>


    </LinearLayout>


    <RelativeLayout
        android:id="@+id/relativeBottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <ImageView
            android:scaleType="fitXY"
            android:src="@drawable/ic_wave_bottom"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</RelativeLayout>